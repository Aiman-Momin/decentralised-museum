{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "env": {
    "PINATA_API_KEY": "@pinata_api_key",
    "PINATA_SECRET_API_KEY": "@pinata_secret_api_key",
    "SEPOLIA_RPC_URL": "@sepolia_rpc_url",
    "PRIVATE_KEY": "@private_key",
    "MUSEUM_TOKEN_ADDRESS": "@museum_token_address",
    "MUSEUM_NFT_ADDRESS": "@museum_nft_address",
    "MUSEUM_DAO_ADDRESS": "@museum_dao_address",
    "SESSION_SECRET": "@session_secret",
    "PORT": "3000"
  },
  "functions": {
    "dist/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ]
}
